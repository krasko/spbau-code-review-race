<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context="ru.spbau.anastasia.race.TwoPlayersOption">

    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageTwoPlayersOption"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/two_players_option"
            android:contentDescription="@string/description_general_background" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonConnect"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/connect"
            android:layout_marginTop="50dp"
            android:onClick="onClickButtonConnection"
            android:nestedScrollingEnabled="false"
            android:background="@android:color/transparent"
            android:contentDescription="@string/button_reconnect" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonStart"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/start"
            android:onClick="onClickButtonStartTwoPlayers"
            android:background="@android:color/transparent"
            android:contentDescription="@string/button_start_playing" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBack"
            android:layout_gravity="right|bottom"
            android:src="@drawable/back"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:layout_marginBottom="10dp"
            android:nestedScrollingEnabled="false"
            android:onClick="onClickButtonBackTwoPlayerOption"
            android:contentDescription="@string/button_back" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_box_is_server"
            android:id="@+id/checkBoxServer"
            android:layout_gravity="left|bottom" />

    </FrameLayout>

</FrameLayout>
