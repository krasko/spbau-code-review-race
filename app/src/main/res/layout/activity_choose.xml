<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context=".DeviseChooser">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/device_chooser2"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:contentDescription="@string/description_general_background" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/device_list"
        android:layout_gravity="top|left" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan_for_devices"
        android:id="@+id/scan_for_devices"
        android:layout_gravity="left|bottom"
        android:singleLine="false"
        android:background="@android:color/transparent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enable_discoverable"
        android:text="@string/enable_discoverable"
        android:layout_gravity="right|bottom"
        android:background="@android:color/transparent" />

</FrameLayout>
